<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".view.NewTaskActivity">

    <!-- Screen title -->
    <TextView
        android:id="@+id/textview_newTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_task"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Task Name label -->
    <TextView
        android:id="@+id/label_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_name"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textview_newTask"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Task Name input -->
    <EditText
        android:id="@+id/editText_taskNameInput"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:inputType="textPersonName"
        android:hint="@string/task_name_hint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/label_task_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Task Description label -->
    <TextView
        android:id="@+id/label_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_description"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/editText_taskNameInput"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Task Description input -->
    <EditText
        android:id="@+id/editText_taskDescriptionInput"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="@string/task_description_hint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/label_task_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/button_submit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/editText_taskDescriptionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
